<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sudoku.androidview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sudoku.androidview.SudokuMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".AboutActivity"
            android:label="@string/about_title"
            android:theme="@android:style/Theme.Dialog">           
        </activity>
        
        <activity
            android:name=".GameActivity"
            android:label="@string/game_title">           
        </activity>
        
        <activity
            android:name=".ImportGridActivity"
            android:label="@string/import_label">
        </activity>
        
        <activity
            android:name=".TestResult"
            android:label="@string/import_label">
        </activity>
    </application>

</manifest>